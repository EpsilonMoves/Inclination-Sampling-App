<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epsilonmoves.inclinationdisplay">

    <application
        android:name="com.epsilonmoves.inclinationdisplay.application.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.epsilonmoves.inclinationdisplay.inclination_main_activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.epsilonmoves.inclinationdisplay.service.InclinationSamplingService" android:exported="true" android:enabled="true"  android:stopWithTask="true"/>

    </application>
</manifest>